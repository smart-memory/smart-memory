{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "description": "Browser automation for web scraping and testing"
    },
    "notebooklm-mcp": {
      "command": "notebooklm-mcp",
      "args": [],
      "description": "Google NotebookLM integration for podcast generation and research"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "./"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "smartmemory": {
      "args": [
        "--directory",
        "/Users/ruze/reg/my/SmartMemory/smart-memory-infra/packages/sm-hetzner",
        "run",
        "sm-hetzner",
        "mcp"
      ],
      "command": "uv",
      "env": {
        "HETZNER_PROJECT": "smartmemory"
      }
    }
  }
}
